#1
def greet(name):
    return f'Здравствуйте, {name}'
print(greet('Артем Евгеньевич'))
#1.2
def square(number):
    return number**2
print(square(5))
#1.3
def max_of_two(x,y):
    if x>y:
        return x
    elif x==y:
        return 'Числа равны'
    else:
        return y
print(max_of_two(2,2))
#2
def describe_person(name, age=30):
    return f'Я {name}, мне {age} лет'
age = input()
name = input()
if age:
    print(describe_person(name,age))
else:
    print(describe_person(name))
#print(describe_person(name='Оля'))
#3
def is_prime(num):
    if num < 2:
        return False
    for i in range(2, num):
        if num % i == 0:
            return False
    return True
print(is_prime(2))
